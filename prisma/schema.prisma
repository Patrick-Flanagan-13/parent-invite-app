// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Slot {
  id             String   @id @default(cuid())
  startTime      DateTime
  endTime        DateTime
  maxCapacity    Int
  currentSignups Int      @default(0)
  signups        Signup[]
  createdById    String?
  createdBy      User?    @relation(fields: [createdById], references: [id])
  name           String?
  description    String?
  collectContributing Boolean @default(false)
  collectDonating     Boolean @default(false)
  displayNameAsTitle  Boolean @default(false)
  hideTime            Boolean @default(false)
  hideEndTime         Boolean @default(false)
  donationLink   String?

  templateId     String?
  template       SlotTemplate? @relation(fields: [templateId], references: [id])
  eventPageId    String?
  eventPage      EventPage?    @relation(fields: [eventPageId], references: [id])
}

model EventPage {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String?
  imageUrl    String?
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  slots       Slot[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}


model Signup {
  id                String   @id @default(cuid())
  slotId            String
  slot              Slot     @relation(fields: [slotId], references: [id], onDelete: Cascade)
  parentName        String
  childName         String?
  email             String
  createdAt         DateTime @default(now())
  cancellationToken String?  @unique @default(cuid())
  contribution      String?
  donation          String?
  reminderSent      Boolean  @default(false)
  attendeeCount     Int      @default(1)
}

model SlotTemplate {
  id                  String   @id @default(cuid())
  name                String
  description         String?
  isDefault           Boolean  @default(false)
  collectContributing Boolean  @default(false)
  collectDonating     Boolean  @default(false)
  collectDonationLink Boolean  @default(false)
  displayNameAsTitle  Boolean  @default(false)
  hideTime            Boolean  @default(false)
  hideEndTime         Boolean  @default(false)

  slots               Slot[]
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

model User {
  id            String          @id @default(cuid())
  username      String          @unique
  email         String          @unique
  passwordHash  String
  name          String?
  role          Role            @default(USER)
  status        Status          @default(SUSPENDED)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @default(now()) @updatedAt
  slots         Slot[]
  eventPages    EventPage[]
  authenticators Authenticator[]
  resetTokens   PasswordResetToken[]
  whitelistedEmails WhitelistedEmail[]
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model Authenticator {
  id                   String   @id @default(cuid())
  credentialID         String   @unique
  userId               String
  providerAccountId    String
  credentialPublicKey  String
  counter              Int
  credentialDeviceType String
  credentialBackedUp   Boolean
  transports           String?
  user                 User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}





model WhitelistedEmail {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
  addedById String
  addedBy   User     @relation(fields: [addedById], references: [id])
}















enum Role {
  ADMIN
  USER
  REGULAR
}

enum Status {
  ACTIVE
  SUSPENDED
}
